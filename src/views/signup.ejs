<%- include('includes/flash.ejs') %>  
<form action="/signup" method="POST">
  <h2>Sign Up</h2>
  <div class="input-field">
    <input
      type="text"
      name="name"
      id="name"
      placeholder="Enter Username"
      required />
  </div>
  <div class="input-field">
    <input
      type="email"
      name="email"
      id="email"
      placeholder="Enter Email"
      required />
  </div>
  <div class="input-field">
    <input
      type="password"
      name="password"
      id="password"
      placeholder="Enter Password"
      required />
  </div>
  <button style="padding-left: 2%" class="btn">Sign Up</button>
</form>
<div class="msg"></div>
<%- include('includes/end.ejs') %>
