<nav class="navbar">
  <!-- LOGO -->

  <div class="logo">Tasklify</div>

  <!-- NAVIGATION MENU -->

  <ul class="nav-links">
    <div class="menu">
      <li><a href="/">Home</a></li>

      <li><a href="/about">About</a></li>

      <li class="services">
        <a href="/">Services</a>

        <!-- DROPDOWN MENU -->

        <ul class="dropdown">
          <li><a href="/progress">Progress</a></li>

          <li><a href="/tasks?deleted=true">Deleted Tasks</a></li>
        </ul>
